<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet id="1" author="Kamikaze">
		<createTable tableName="tb_lab_status">
			<column name="lab_status_id" type="BIGINT(20)" autoIncrement="true" startWith="3">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="description" type="varchar(45)">
				<constraints nullable="false" />
			</column>
			<column name="active" type="BOOLEAN">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="3" author="Kamikaze">
		<insert tableName="tb_lab_status">
			<column name="lab_status_id" value="1" />
			<column name="description" value="Ativo" />
			<column name="active" value="true" />
		</insert>
		
		<insert tableName="tb_lab_status">
			<column name="lab_status_id" value="2" />
			<column name="description" value="Inativo" />
			<column name="active" value="false" />
		</insert>
	</changeSet>

</databaseChangeLog>