<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet id="1" author="Kamikaze">
		<createTable tableName="tb_user_gender">
			<column name="user_gender_id" type="BIGINT(20)" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="description" type="VARCHAR(45)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="2" author="Kamikaze">
		<insert tableName="tb_user_gender">
			<column name="user_gender_id" value="1" />
			<column name="description" value="Masculino" />
		</insert>
		<insert tableName="tb_user_gender">
			<column name="user_gender_id" value="2" />
			<column name="description" value="Feminino" />
		</insert>
	</changeSet>

</databaseChangeLog>